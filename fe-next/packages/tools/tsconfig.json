{
  "extends": "@workspace/typescript-config/react-library.json",
  "compilerOptions": {
    "paths": {
      "@workspace/tools/*": [
        "./src/*"
      ],
      "@workspace/ui/*": [
        "../ui/src/*"
      ],
    },
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
  },
  "include": [
    ".",
    "src/lib"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}